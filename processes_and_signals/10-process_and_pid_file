#!/usr/bin/env bash
PIDFILE="/var/run/myscript.pid"
# Try to create PID file (do NOT exit if it fails)
echo $$ > "$PIDFILE" 

sigterm_handler() {
    echo "I hate the kill command"
    exit 0
}
sigint_handler() {
    echo "Y U no love me?!"
}
sigquit_handler() {
    rm -f "$PIDFILE"
    exit 0
}
trap sigterm_handler SIGTERM
trap sigint_handler SIGINT
trap sigquit_handler SIGQUIT
while true; do
    echo "To infinity and beyond"
    sleep 3
done
